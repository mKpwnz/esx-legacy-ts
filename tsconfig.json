{
	"compilerOptions": {
		"target": "ESNext",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"module": "CommonJS",
		"lib": [
			"ESNext"
		],
		"types": [
			"@citizenfx/client",
			"@citizenfx/server"
		],
		"moduleResolution": "node",
	},
	"include": [
		"./**/*"
	],
	"exclude": [
		"**/node_modules",
		"**/__tests__/*"
	]
}